    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Croft Kayaking</title>
    <link rel="shortcut icon" href="~/img/KayakIcon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
